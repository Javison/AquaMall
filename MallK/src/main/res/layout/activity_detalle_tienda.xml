<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<LinearLayout
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".DetalleTienda"
    tools:ignore="MergeRootFrame" >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/rltienda"
        android:layout_weight="1">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="nombre"
                android:id="@+id/nombreTienda"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="45dp" />

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/nombreTienda"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="direccion"
                android:id="@+id/direccionTienda"
                android:layout_gravity="center_horizontal"
                android:gravity="center" />

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/direccionTienda"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="horario"
                android:id="@+id/horarioTienda"
                android:layout_gravity="center_horizontal"
                android:gravity="center" />

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/horarioTienda"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="descripcion"
                android:id="@+id/descripcionTienda"
                android:layout_gravity="center_horizontal"
                android:gravity="center" />

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/descripcionTienda"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="telefono"
                android:id="@+id/telefonoTienda"
                android:gravity="center" />

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/telefonoTienda"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="webTienda"
                android:id="@+id/webTienda"
                android:gravity="center" />

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/webTienda"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="email"
                android:id="@+id/emailTienda"
                android:layout_gravity="center_horizontal"
                android:gravity="center" />

        <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/emailTienda"
                android:text="LLAMAR"
                android:id="@+id/llamarBtn" />

        <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/llamarBtn"
                android:text="VER LOCAL"
                android:id="@+id/verLocalBtn"
                android:layout_gravity="center_horizontal" />
    </RelativeLayout>

    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frListado"
        android:name="com.tarea1.mallk.fragments.ComentariosFragment"
        tools:layout="@layout/fragment_comentario"
        android:layout_weight="3">
    </fragment>


</LinearLayout>
</ScrollView>
